<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Sheet Group" Height="700" Width="500">

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Name:" Grid.Row="0" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <TextBox x:Name="NameTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10" MinWidth="200"/>

        <TextBlock Text="Sector Group:" Grid.Row="1" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <ComboBox x:Name="SectorGroupComboBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10" MinWidth="200"/>

        <TextBlock Text="View Family:" Grid.Row="2" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <ComboBox x:Name="ViewFamilyComboBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,10" MinWidth="200"/>

        <TextBlock Text="View Type:" Grid.Row="3" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <ComboBox x:Name="ViewTypeComboBox" Grid.Row="3" Grid.Column="1" Margin="0,0,0,10" MinWidth="200"/>

        <TextBlock Text="Levels:" Grid.Row="4" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <ListBox x:Name="LevelsListBox" SelectionMode="Extended" Grid.Row="4" Grid.Column="1" Margin="0,0,0,10" MinWidth="200"/>

        <TextBlock Text="Scope Boxes:" Grid.Row="5" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <ListBox x:Name="ScopeBoxesListBox" SelectionMode="Extended" Grid.Row="5" Grid.Column="1" Margin="0,0,0,10" MinWidth="200"/>

        <TextBlock Text="View Name Template:" Grid.Row="6" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <TextBox x:Name="ViewNameTemplateTextBox" Grid.Row="6" Grid.Column="1" Margin="0,0,0,10" MinWidth="200"/>

        <TextBlock Text="Sheet Number Template:" Grid.Row="7" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <TextBox x:Name="SheetNumberTemplateTextBox" Grid.Row="7" Grid.Column="1" Margin="0,0,0,10" MinWidth="200"/>

        <TextBlock Text="Sheet Name Template:" Grid.Row="8" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <TextBox x:Name="SheetNameTemplateTextBox" Grid.Row="8" Grid.Column="1" Margin="0,0,0,10" MinWidth="200"/>

        <TextBlock Text="" Grid.Row="9" Grid.ColumnSpan="2" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <TextBlock Text="" Grid.Row="10" Grid.ColumnSpan="2" Margin="0,0,10,10" VerticalAlignment="Center"/>

        <StackPanel Grid.Row="11" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button IsDefault="True" x:Name="OkButton" Content="OK" Width="75" Height="23" Margin="0,0,10,0"/>
            <Button IsCancel="True" x:Name="CancelButton" Content="Cancel" Width="75" Height="23"/>
        </StackPanel>

    </Grid>
</Window>
