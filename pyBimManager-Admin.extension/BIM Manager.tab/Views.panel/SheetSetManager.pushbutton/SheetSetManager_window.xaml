<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow" Height="600" Width="800" MinHeight="500" MinWidth="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" /> <!-- Buttons row -->
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0">
            <TabItem Header="Titleblocks">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- ListBox for Not Configured -->
                    <ListBox Grid.Row="0" Name="NotConfiguredListBox" Margin="10" />

                    <!-- Buttons -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,2,0,2">
                        <Button Name="Load" Content="Load..." Margin="0,0,5,0" Width="75" Height="23" />
                        <Button Name="Configure" Content="Configure" Margin="0,0,5,0" Width="75" Height="23" />
                    </StackPanel>

                    <!-- ListBox for Configured -->
                    <ListBox Grid.Row="2" Name="ConfiguredListBox" Margin="10" />

                    <!-- Details Pane -->
                    <Border Grid.Row="3" BorderBrush="Gray" BorderThickness="1" Margin="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="22" />
                                <RowDefinition Height="22" />
                                <RowDefinition Height="22" />
                                <RowDefinition Height="22" />
                                <RowDefinition Height="22" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#FFF" />
                            <Border Grid.Row="1" Grid.ColumnSpan="2" Background="#F3F3F3" />
                            <Border Grid.Row="2" Grid.ColumnSpan="2" Background="#FFF" />
                            <Border Grid.Row="3" Grid.ColumnSpan="2" Background="#F3F3F3" />
                            <Border Grid.Row="4" Grid.ColumnSpan="2" Background="#FFF" />
                            <!-- Table Header -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Field" FontWeight="Bold" Margin="5,0" VerticalAlignment="Center" />
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="Value" FontWeight="Bold" Margin="5,0" VerticalAlignment="Center" />
                            <!-- Actual Table Content for Details -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Width" Margin="5,0" VerticalAlignment="Center" />
                            <TextBlock Grid.Row="1" Grid.Column="1" Name="WidthValue" Margin="5,0" VerticalAlignment="Center" />
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Height" Margin="5,0" VerticalAlignment="Center" />
                            <TextBlock Grid.Row="2" Grid.Column="1" Name="HeightValue" Margin="5,0" VerticalAlignment="Center" />
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Center X" Margin="5,0" VerticalAlignment="Center" />
                            <TextBlock Grid.Row="3" Grid.Column="1" Name="CenterXValue" Margin="5,0" VerticalAlignment="Center" />
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Center Y" Margin="5,0" VerticalAlignment="Center" />
                            <TextBlock Grid.Row="4" Grid.Column="1" Name="CenterYValue" Margin="5,0" VerticalAlignment="Center" />
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            <TabItem Header="Sector Groups">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" /> <!-- ListBox -->
                        <RowDefinition Height="Auto" /> <!-- Buttons -->
                        <RowDefinition Height="Auto" /> <!-- Details Pane -->
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- ListBox for Sector Groups -->
                    <ListBox Grid.Row="0" Name="SectorGroupsListBox" Margin="10" />

                    <!-- Buttons -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,2,0,2">
                        <Button Name="NewSectorGroup" Content="New" Margin="0,0,5,0" Width="75" Height="23" />
                        <Button Name="RenameSectorGroup" Content="Rename" Margin="0,0,5,0" Width="75" Height="23" />
                        <Button Name="EditSectorGroup" Content="Edit" Margin="0,0,5,0" Width="75" Height="23" />
                        <Button Name="DeleteSectorGroup" Content="Delete" Margin="0,0,5,0" Width="75" Height="23" />
                    </StackPanel>

                    <!-- Details Pane -->
                    <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1" Margin="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="22" />
                                <RowDefinition Height="22" />
                                <RowDefinition Height="22" />
                                <RowDefinition Height="22" />
                                <RowDefinition Height="22" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#FFF" />
                            <Border Grid.Row="1" Grid.ColumnSpan="2" Background="#F3F3F3" />
                            <Border Grid.Row="2" Grid.ColumnSpan="2" Background="#FFF" />
                            <Border Grid.Row="3" Grid.ColumnSpan="2" Background="#F3F3F3" />
                            <Border Grid.Row="4" Grid.ColumnSpan="2" Background="#FFF" />
                            <!-- Table Header -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Field" FontWeight="Bold" Margin="5,0" VerticalAlignment="Center" />
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="Value" FontWeight="Bold" Margin="5,0" VerticalAlignment="Center" />
                            <!-- Example Table Content for Details -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Name" Margin="5,0" VerticalAlignment="Center" />
                            <TextBlock Grid.Row="1" Grid.Column="1" Name="SectorGroupNameValue" Margin="5,0" VerticalAlignment="Center" />
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Description" Margin="5,0" VerticalAlignment="Center" />
                            <TextBlock Grid.Row="2" Grid.Column="1" Name="SectorGroupDescriptionValue" Margin="5,0" VerticalAlignment="Center" />
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Other Field" Margin="5,0" VerticalAlignment="Center" />
                            <TextBlock Grid.Row="3" Grid.Column="1" Name="SectorGroupOtherValue" Margin="5,0" VerticalAlignment="Center" />
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            <TabItem Header="Sheet Groups">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" /> <!-- ListBox -->
                        <RowDefinition Height="Auto" /> <!-- Buttons -->
                        <RowDefinition Height="Auto" /> <!-- Details Pane -->
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- ListBox for Sheet Groups -->
                    <ListBox Grid.Row="0" Name="SheetGroupsListBox" Margin="10" />

                    <!-- Buttons -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,2,0,2">
                        <Button Name="NewSheetGroup" Content="New" Margin="0,0,5,0" Width="75" Height="23" />
                        <Button Name="RenameSheetGroup" Content="Rename" Margin="0,0,5,0" Width="75" Height="23" />
                        <Button Name="EditSheetGroup" Content="Edit" Margin="0,0,5,0" Width="75" Height="23" />
                        <Button Name="DeleteSheetGroup" Content="Delete" Margin="0,0,5,0" Width="75" Height="23" />
                    </StackPanel>

                    <!-- Details Pane -->
                    <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1" Margin="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="22" />
                                <RowDefinition Height="22" />
                                <RowDefinition Height="22" />
                                <RowDefinition Height="22" />
                                <RowDefinition Height="22" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#FFF" />
                            <Border Grid.Row="1" Grid.ColumnSpan="2" Background="#F3F3F3" />
                            <Border Grid.Row="2" Grid.ColumnSpan="2" Background="#FFF" />
                            <Border Grid.Row="3" Grid.ColumnSpan="2" Background="#F3F3F3" />
                            <Border Grid.Row="4" Grid.ColumnSpan="2" Background="#FFF" />
                            <!-- Table Header -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Field" FontWeight="Bold" Margin="5,0" VerticalAlignment="Center" />
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="Value" FontWeight="Bold" Margin="5,0" VerticalAlignment="Center" />
                            <!-- Example Table Content for Details -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Name" Margin="5,0" VerticalAlignment="Center" />
                            <TextBlock Grid.Row="1" Grid.Column="1" Name="SheetGroupNameValue" Margin="5,0" VerticalAlignment="Center" />
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Description" Margin="5,0" VerticalAlignment="Center" />
                            <TextBlock Grid.Row="2" Grid.Column="1" Name="SheetGroupDescriptionValue" Margin="5,0" VerticalAlignment="Center" />
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Other Field" Margin="5,0" VerticalAlignment="Center" />
                            <TextBlock Grid.Row="3" Grid.Column="1" Name="SheetGroupOtherValue" Margin="5,0" VerticalAlignment="Center" />
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Name="OkButton" Content="OK" Width="75" Height="23" Margin="0,0,10,0" />
            <Button Name="ApplyButton" Content="Apply" Width="75" Height="23" Margin="0,0,10,0" />
            <Button Name="CancelButton" Content="Cancel" Width="75" Height="23" />
        </StackPanel>
    </Grid>
</Window>